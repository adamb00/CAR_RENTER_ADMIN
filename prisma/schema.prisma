generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("DIRECT_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  accounts  Account[]

  @@map("Users")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("Accounts")
}

model Car {
  id            String          @id @default(cuid())
  manufacturer  String
  model         String
  seats         Int
  images        String[]        @default([])
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  smallLuggage  Int             @default(0)
  largeLuggage  Int             @default(0)
  bodyType      CarBodyType     @default(sedan)
  fuel          CarFuel         @default(petrol)
  transmission  CarTransmission @default(manual)
  monthlyPrices Int[]           @default(dbgenerated("array_fill(0, ARRAY[12])"))
  colors        Color[]         @relation("CarColors")

  @@map("Cars")
}

model Color {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  cars      Car[]    @relation("CarColors")

  @@map("Colors")
}

model ContactQuotes {
  id               String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  humanId          String?
  locale           String
  name             String
  email            String
  phone            String
  preferredchannel String
  extras           String[]       @default([])
  rentalstart      DateTime?      @db.Date
  rentalend        DateTime?      @db.Date
  arrivalflight    String?
  departureflight  String?
  partysize        String?
  children         String?
  carid            String?
  carname          String?
  delivery         Json?
  status           String         @default("new")
  updated          String?
  createdAt        DateTime       @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  updatedAt        DateTime       @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  RentRequests     RentRequests[]

  @@index([createdAt], map: "idx_contactquotes_created_at")
  @@index([status], map: "idx_contactquotes_status")
}

model RentRequests {
  id            String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  humanId       String?
  locale        String
  carid         String?
  quoteid       String?        @db.Uuid
  contactname   String
  contactemail  String
  contactphone  String?
  rentalstart   DateTime?      @db.Date
  rentalend     DateTime?      @db.Date
  status        String         @default("new")
  updated       String?
  payload       Json?
  createdAt     DateTime       @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  updatedAt     DateTime       @default(dbgenerated("timezone('utc'::text, now())")) @db.Timestamptz(6)
  ContactQuotes ContactQuotes? @relation(fields: [quoteid], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([carid], map: "idx_rentrequests_car")
  @@index([createdAt], map: "idx_rentrequests_created_at")
  @@index([status], map: "idx_rentrequests_status")
}

enum CarBodyType {
  sedan
  hatchback
  suv
  wagon
  van
  pickup
  coupe
}

enum CarFuel {
  petrol
  diesel
  electric
  hybrid
}

enum CarTransmission {
  manual
  automatic
}
